  /* Member Settings Styles  */
  .picDisplay {
    margin: 40px auto;
    border: 3px solid #000;
    max-width: 500px;
    width: 100%;
    padding: 15px;
    background-color: #eee;
  }
  .picDisplay img {
    max-width: 300px;
    width: 100%;
