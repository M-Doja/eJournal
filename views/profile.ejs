<% include partials/header %>
<style media="screen">
  #followList li {list-style: none;}
  nav #Profilebtn {color:#fff;font-weight: bold;}

</style>
<nav class="navbar navbar-inverse">

  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="#"><%= title %></a>
  </div>

  <div class="collapse navbar-collapse" id="myNavbar">
    <ul class="nav navbar-nav">
      <li class=""><a id="Homebtn"href="/home">Home</a></li>
      <li  class=""><a id="Profilebtn" href="/<%= currentUser.username %>">Profile </a></li>
      <li><a id="Communitybtn" href="/community/all">Community</a></li>
      <li><a id="Inboxbtn" href="/inbox/all">Inbox

      </a></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li><a href="/logout"><span class="glyphicon glyphicon-log-in"></span> Log Out</a></li>
    </ul>

  </div>
</nav>

<% if( currentUser.id === user.id) { %>
  <div class="container-fluid">
  	<div class="row">
  		<div class="col-md-6  text-center">
        <div  id="picWrap">

            <% if(unread === 1) { %>
              <i><%= unread  %> New Message</i>
            <%}else{ %>
              <i><%= unread  %> New Messages</i>
            <%}%><br><br>
            <% if(user.avatar){ %>
              <img id="profilePic" src="<%= user.avatar %>"width="150" alt="">
            <%}else{ %>
              <img id="profilePic" src="/img/profile_avatar.png"width="150" alt="">
            <%}%>
          <form style="margin:0 auto" action="/upload/new/<%= user.id %>" method="post" enctype="multipart/form-data">
            <div class="text-center form-group">
              <input style="margin:10px  auto" type="file" id="image" name="image" accept="image/*" required>
            </div>
            <br>
            <button type="submit" class="btn btn-default rounded"><span class="glyphicon glyphicon-upload"></span> Photo Upload</button>
          </form>
        </div>
        <div class="btnWrap"><br>
          <button type="button" name="button"><%= user.followers.length %> Followers</button>
          <button type="button" name="button">Following <%= user.following.length %></button>
        </div><br>
        <p class="profileName">
          Profile: <%= user.username %> <br>
        </p>
        <% if( entry.length === 1) { %>
          <p><%= entry.length %> doccument</p>
        <% } else { %>
          <p><%= entry.length %> documents</p>
        <% } %>

  		</div>
  		<div class="col-md-6  text-center">
        <h3>Following</h3>
        <ul id="followList">
          <li class="iFollow"><%= user.following.length %></li>
        </ul>
  		</div>
  	</div>
  </div>

<% }else{ %>
  <div class="container-fluid">
	<div class="row">
		<div class="col-md-6  text-center">
			<img alt="Bootstrap Image Preview" src="/img/profile_avatar.png" width="150" id="proPic" />

      <% if( isFollowing ) { %>
        <form class="" action="/remove/follower/<%= user.id %>" method="post">
          <br>
          <button type="submit" >Un-Follow <%= user.username %></button>
        </form><br>
      <% } else { %>
        <form class="" action="/add/follow/<%= user.id %>" method="post">
          <br>
          <button type="submit" >Follow <%= user.username %></button>
        </form><br>
      <% } %>
		</div><br><br>
		<div class="col-md-6  text-center">
			<form role="form">
				<div class="form-group">

					<label for="subject">
						Subject
					</label>
					<input type="text" id="mailSubject" class="form-control" id="subject" />
				</div>
				<div class="form-group">

					<label for="body">
						Body
					</label>
          <textarea name="mailBody" class="form-control" id="body"></textarea>
				</div>

				<button type="submit" class="btn btn-primary">
					Submit
				</button>
			</form>
		</div>
	</div>
</div>
<% } %>


<% include partials/footer %>
